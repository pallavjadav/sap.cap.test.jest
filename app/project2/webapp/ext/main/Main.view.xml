<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:macros="sap.fe.macros" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="project2.ext.main.Main" xmlns:l="sap.ui.layout" xmlns:f="sap.f">
    	<f:DynamicPage id="FilterBarDefault" class="sapUiResponsiveContentPadding">
		<f:title>
			<f:DynamicPageTitle id="_IDGenDynamicPageTitle1">
				<f:heading>
					<Title id="_IDGenTitle1" text="Filter Bar" level="H2" />
				</f:heading>
				<f:snappedContent>
                <Panel headerText="Employee Tile">
                <HeaderContainer scrollStep="200" showDividers="false" content="{
                path:'/MyEmp',
                parameters:{
                    $filter: 'dob ge \'2012-01-31\'',
                    $orderby: 'dob desc'
                }
                }">
                    <GenericTile header="{name}"  press=".handlers.onTilePress">
                        <TileContent unit="{dob}">
                            <NumericContent value="{client}" valueColor="Good" scale="k"></NumericContent>
                        </TileContent>
                    </GenericTile>
                </HeaderContainer>
                </Panel>
                <Panel headerText="Filter Count">
					<Text text="{fbConditions>/filtersTextInfo}" />
                </Panel>
				</f:snappedContent>
			</f:DynamicPageTitle>
		</f:title>
		<f:header>
			<f:DynamicPageHeader id="_IDGenDynamicPageHeader1" pinnable="true">
				<VBox id="_IDGenVBox1">
                      <macros:FilterBar id="FilterBar" metaPath="/MyEmp/@com.sap.vocabularies.UI.v1.SelectionFields#filterBarMacro" filterChanged=".handlers.onFiltersChanged">
            </macros:FilterBar>
				</VBox>
			</f:DynamicPageHeader>
		</f:header>
		<f:content>
			            <macros:Table id="Table" metaPath="/MyEmp/@com.sap.vocabularies.UI.v1.LineItem#tableMacro" filterBar="FilterBar" header="My Employees" readOnly="true"/>

		</f:content>
	</f:DynamicPage>
</mvc:View>